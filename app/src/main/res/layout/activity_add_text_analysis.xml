<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AddTextAnalysisActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/edit_text_analysis_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="名前を入れてね"
            android:inputType="text"/>

        <Button
            android:id="@+id/btn_text_analyst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edit_text_analysis_member_name"
            android:layout_alignParentEnd="true"
            android:text="@string/text_analyst"
            app:backgroundTint="#9A969D" />

    </RelativeLayout>


    <EditText
        android:id="@+id/edit_text_analysis_dialogue"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/textview_border"
        android:hint="会話の内容を入れてね" />

    <TextView
        android:id="@+id/text_text_analysis_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="分析結果"/>

<!--    <Button-->
