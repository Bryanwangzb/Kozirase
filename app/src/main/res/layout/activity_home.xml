<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="gravity"
    tools:context=".HomeActivity"
    tools:ignore="MissingClass">
<!--Your Heartrate-->
    <!--Your Messages-->
    <Button
        android:id="@+id/button3"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:hapticFeedbackEnabled="false"
        android:stateListAnimator="@null"
        android:text="@string/your_heart_rate"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#9A969D"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <!--ログアウト-->

    <Button
        android:id="@+id/button6"
        android:layout_width="290dp"
        android:layout_height="75dp"
        android:layout_marginBottom="12dp"
        android:hapticFeedbackEnabled="false"
        android:stateListAnimator="@null"
        android:text="@string/your_messages"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:backgroundTint="#9A969D"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="127dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:text="@string/logout"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:stateListAnimator="@null"
        app:backgroundTint="#9A969D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#9A969D" />
<!--画像-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="266dp"
        android:layout_height="206dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.707"
        app:srcCompat="@drawable/profilepicsample" />
<!--新しいイベントを記録-->
    <!--新しいメッセージを記録-->

    <Button
        android:id="@+id/button7"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:stateListAnimator="@null"
        android:text="@string/recordnewevents"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:backgroundTint="#9A969D"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="190dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#9A969D"
        android:gravity="center_horizontal"
        android:stateListAnimator="@null"
        android:text="@string/recordnewmessages"
        android:textSize="12sp"
        app:backgroundTint="#9A969D"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>